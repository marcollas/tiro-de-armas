{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Start Application",
      "type": "shell",
      "command": "docker-compose up --build",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Stop Application",
      "type": "shell",
      "command": "docker-compose down",
      "problemMatcher": []
    },
    {
      "label": "Docker: Rebuild",
      "type": "shell",
      "command": "docker-compose down && docker-compose up --build",
      "problemMatcher": []
    },
    {
      "label": "Docker: View Logs",
      "type": "shell",
      "command": "docker-compose logs -f",
      "problemMatcher": []
    }
  ]
